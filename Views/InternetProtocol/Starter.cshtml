@using Microsoft.AspNetCore.Html
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/reset-css@5.0.2/reset.min.css" rel="stylesheet">
    <title>Enter an IP</title>
    <style>

        html, body {
            height: 100vh;
            overflow: hidden;
        }

        .text-bold {
            font-weight: bold;
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            align-items: center;
            text-align: center;
        }

        .container {
            height: 60%;
            padding-top: 40px;
            display: flex;
            flex-wrap: nowrap;
            justify-content: space-between;
            align-items: center;
            align-content: center;
            flex-direction: column;
        }

        .main-heading {
            color: #ff6600;
            text-align: center;
            font-size: 50px;
            font-weight: bold;
        }

        .ip-container {
            display: flex;  
            flex-direction: column;
            align-items: center;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            margin: 50px auto;
            width: 500px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            font-weight: bold;
        }

        .main-logo {
            position: absolute;
            top: 0;
            left: 0;
            max-width: 160px;
            max-height: 182.19px;
        }

        .ip-form {
            display: flex;
            flex: 1;
            padding-top: 10px;
            justify-content: space-between;
        }

        .ip-input {
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            flex-grow: 1;
            margin-right: 10px;
            width: 150px;
        }

        .calculate-button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #ff6600;
            color: #ffffff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .calculate-button:hover {
                background-color: #ff7214;
            }

        .error-view {
            color: red;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <section class="container">
        <h1 class="main-heading">IP Калкулатор</h1>
        <img class="main-logo" src="https://spge-bg.com/wp-content/uploads/2017/05/LogoSPGEwebTr.png">
        <div class="ip-container">
            <span class="text-bold">Въведете IP адрес:</span>
            <form class="ip-form" method="post" asp-controller="InternetProtocol" asp-action="Starter">
                <input type="text" class="ip-input" id="inputBox" name="ipDec" required>
                <button type="submit" class="calculate-button">Пресметни</button>
            </form>
            @if (ViewData["InvalidIP"] != null)
            {
                <span class="error-view">@ViewData["InvalidIP"]</span>
            }
        </div>
    </section>
</body>
</html>
